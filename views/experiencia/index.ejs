<% layout("/layouts/boilerplate") %>
  <h1>Experiencia Laboral</h1>
  <% for (let exp of exps) {%>
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <img src="<%= exp.logo[0].url %>" alt="" class="img-fluid" />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">
              <%= exp.donde %>
            </h5>
            <p class="card-text">
              <%= exp.cuando %>
            </p>
            <a href="/experiencia/<%= exp._id %>" class="btn btn-primary">Detalles</a>
          </div>
        </div>
      </div>
    </div>
    <%}%>
      <% if(currentUser) { %>
        <div>
          <a href="/experiencia/nueva">Agregar Nueva Experiencia Laboral</a>
        </div>
        <% } %>
          <a href="/">Volver</a>