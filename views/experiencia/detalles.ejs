<% layout("/layouts/boilerplate") %>

  <div class="container display-flex justify-content-center align-items-center mt-5">


    <div class="row">
      <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4>
        <div id="logoCarrousel" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <% exp.logo.forEach((img, i)=> { %>
              <div class="carousel-item <%= i === 0 ? " active" : "" %>">
                <img src="<%= img.url %>" class="d-block w-100" alt="">
              </div>
              <% }) %>
          </div>
          <% if(exp.logo.length> 1) {%>
            <button class="carousel-control-prev" type="button" data-bs-target="#logoCarrousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#logoCarrousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
            <% } %>
        </div>

        <h5 class="card-title">
          <%= exp.donde %>
        </h5>

        <h6 class="card-text text-muted">
          <%= exp.cuando %>
        </h6>

        <p class="card-text">
          <%= exp.haciendoQue %>
        </p>
      </div>

      <div class="card-body">
        <a href="/experiencia">Volver</a>
      </div>

      <% if(currentUser) { %>
        <div class="card-body">
          <a class="card-link btn btn-warning" href="/experiencia/<%= exp._id%>/editar">Editar
          </a>
          <form class="d-inline" action="/experiencia/<%= exp._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Borrar</button>
          </form>
        </div>
        <% } %>
    </div>
  </div>