<% layout("layouts/boilerplate") %>
    <div class="container display-flex justify-content-center align-items-center mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h5 class="card-title">Registro</h5>
                        <form action="/registro" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Nombre de Usuario</label>
                                <input class="form-control" type="text" id="username" name="username" autofocus
                                    required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="email">e-mail</label>
                                <input class="form-control" type="email" id="email" name="email" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Contrase√±a</label>
                                <input class="form-control" type="password" id="password" name="password" required />
                            </div>
                            <div class="d-grid gap-2">
                                <button class="btn btn-success">Enviar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>